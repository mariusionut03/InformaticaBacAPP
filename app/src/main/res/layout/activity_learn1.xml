<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.MyApplication"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <WebView
        android:id="@+id/webViewHtml"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonBack"
        android:layout_above="@id/buttonBackwards" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:fontFamily="@font/monda"
        android:background="@drawable/learnactivitybuttonlight"
        android:text="Back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="321dp"
        android:layout_height="49dp"
        android:text="Example Learn Activity"
        android:fontFamily="@font/monda"
        android:textSize="27sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/buttonBackwards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inapoi"
        android:fontFamily="@font/monda"
        android:textColor="#000000"
        android:background="@drawable/learnactivitybuttonlight"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/buttonForwards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inainte"
        android:fontFamily="@font/monda"
        android:textColor="#000000"
        android:background="@drawable/learnactivitybuttonlight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="41dp"
        android:text="1/7"
        android:fontFamily="@font/monda"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>