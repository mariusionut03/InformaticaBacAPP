<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/monda"
        android:text="Setări"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switchTheme"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chooseThemeTextView"
        android:layout_toEndOf="@+id/chooseThemeTextView"
        android:thumb="@drawable/switch_thumb_custom"
        android:track="@drawable/switch_track_custom" />

    <TextView
        android:id="@+id/chooseThemeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsTitle"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/monda"
        android:text="Alege tema aplicației"
        android:textColor="#000000"
        android:textSize="28dp" />

</RelativeLayout>