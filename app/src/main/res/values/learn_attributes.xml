<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btnStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@drawable/style_bg_light_ripple</item>
    </style>

    <style name="chapterStyle">
        <item name="android:fontFamily">@font/dosis</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="titleStyle">
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/dosis</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginStart">17dp</item>
    </style>

    <style name="pagesStyle">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/dosis</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="badgeStyle">
        <item name="android:background">#838383</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">9dp</item>
        <item name="android:padding">2dp</item>
    </style>
</resources>